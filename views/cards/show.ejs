<h2 class="page-header"><%= card.title %></h2>
<div class="card-details">
  <div>
    <img class="card-cover" src="<%= card.coverImagePath %>">
    <div class="card-details-btn-grid">
      <a class="btn btn-primary" href="/cards/<%= card.id %>/edit">Edit</a>
      <%- include('../partials/deleteForm', { url: `/cards/${card.id}` }) %>
      <a class="btn btn-primary card-details-idol-button" href="/idols/<%= card.idol.id %>">View Idol</a>
    </div>
  </div>
  <div class="card-details-grid">
    <div class="card-details-label">Idol:</div>
    <div><%= card.idol.name %></div>
    <div class="card-details-label">Acquire Date:</div>
    <div><%= card.acquireDate.toDateString() %></div>
    <div class="card-details-label">Version:</div>
    <div><%= card.version %></div>
    <div class="card-details-label">Description:</div>
    <div><%= card.description %></div>
  </div>
</div>